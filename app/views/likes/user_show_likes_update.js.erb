<% @user.posts.all.each do |post| %>

  <% user_show_like_count = post.likes.count %>

  <% user_show_like_exists = Like.where(post_id: post.id, user_id: current_user.id) == [] ? "Like" : "Unlike" %>

  document.getElementById("user_index_<%= post.id %>").textContent = "<%= user_show_like_exists %>";

  document.getElementById("user_show_like_count<%= post.id %>").textContent = "<%= user_show_like_count %>";

<% end %>