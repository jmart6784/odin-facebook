<% @friend_post = Post.find(params[:id]) %>

<% friend_feed_like_exists = Like.where(post_id: @friend_post.id, user_id: current_user.id) == [] ? "Like" : "Unlike" %>

document.getElementById("friend_feed_<%= @friend_post.id %>").textContent = "<%= friend_feed_like_exists %>";

<% friend_feed_like_count = @friend_post.likes.count %>

 document.getElementById("friend_feed_like_count<%= @friend_post.id %>").textContent = "<%= friend_feed_like_count %>";