<div id="comment-form">
  <h3 id="post-comment-title">Post a Comment</h3>

  <% if @post.comments.count == 0 %>
    <% comment_placeholder = "Be the first to comment!" %>
  <% else %>
    <% comment_placeholder = "Share your thoughts..." %>
  <% end %>

  <%= form_for [ @post, @comment ] do |f| %>

    <%= f.text_area :body, id: "comment-field", placeholder: comment_placeholder %>
    <br>
    <%= f.submit "Comment", id: "comment-submit" %>

  <% end %>
</div>