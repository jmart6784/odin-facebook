<h1>Post Index</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th># of Comments</th>
      <th>Likes</th>
      <th>Like button</th>
      <th>Posted at</th>
      <th>Edited at</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to User.find(post.user_id).first_name + " " + User.find(post.user_id).last_name, User.find(post.user_id) %>
        </td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td><%= post.comments.count %></td>
        <td id=<%= "index_like_count#{post.id}" %>><%= post.likes.count %></td>
        <td>
          <% @index_like_exists = Like.where(post_id: post.id, user_id: current_user.id) == [] ? "Like" : "Unlike" %>

          <%= link_to @index_like_exists, index_likes_update_like_path(id: post.id), method: :put, remote: true, id: "post#{post.id}" %>
        </td>
        <% if post.created_at == post.updated_at %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>No edit</td>
        <% else %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>Edited <%= time_ago_in_words(post.updated_at, include_seconds: true)%> ago</td>
        <% end %>

        <% if current_user.id == post.user_id %>
          <td><%= link_to "Edit", edit_post_path(post) %></td>
          <td><%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Post", new_post_path, class: "test-link" %>
<br>
<%= link_to "All users", users_path, class: "test-link" %>
<br>
<%= link_to "Notifications", notifications_url, class: "test-link" %>
<br>
<%= link_to "Friend feed", friend_feed_path, class: "test-link" %>

<% if notifications.empty? %>
  <h3>Notifications empty</h3>
<% else %>
  <h3>
    You have <%= notifications.count %> new <%= 'notification'.pluralize(notifications.count) %>!
  </h3>
<% end %>