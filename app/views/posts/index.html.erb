<h1>Post Index</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th># of Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= User.find(post.user_id).first_name + " " + User.find(post.user_id).last_name %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.comments.count %></td>
        <td><%= link_to "Show", post %></td>
        <% if current_user.id == post.user_id %>
          <td><%= link_to "Edit", edit_post_path(post) %></td>
          <td><%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Post", new_post_path, id: "index-new-post-link" %>
<br>
<%= link_to "All users", users_path, id: "index-post-users-link" %>