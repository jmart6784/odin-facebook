<h1>Post Index</h1>
<%= link_to "New Post", new_post_path, id: "index-new-post-link" %>
<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>User</th>
      <th>Title</th>
      <th>Content(optional)</th>
      <th># of Comments</th>
      <th>Likes</th>
      <th>Like button</th>
      <th>Posted at</th>
      <th>Edited at</th>
      <th>Image(optional)</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= user_avatar(User.find(post.user_id), size=40) %>
        </td>
        <td>
          <%= link_to User.find(post.user_id).first_name + " " + User.find(post.user_id).last_name, User.find(post.user_id) %>
        </td>
        <td><%= link_to post.title, post %></td>
        <% unless post.body.blank? %>
          <td><%= post.body %></td>
        <% else %>
          <td>NO OPTIONAL CONTENT</td>
        <% end %>
        <td><%= post.comments.count %></td>
        <td id=<%= "index_like_count#{post.id}" %>><%= post.likes.count %></td>
        <td>
          <% @index_like_exists = Like.where(post_id: post.id, user_id: current_user.id) == [] ? "Like" : "Unlike" %>

          <%= link_to @index_like_exists, index_likes_update_like_path(id: post.id), method: :put, remote: true, id: "post_index_#{post.id}" %>
        </td>
        <% if post.created_at == post.updated_at %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>No edit</td>
        <% else %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>Edited <%= time_ago_in_words(post.updated_at, include_seconds: true)%> ago</td>
        <% end %>

        <% if post.image.attached? %>
          <td><%= image_tag post.image.variant(resize: '300x300!') %></td>
        <% else %>
          <td>No image</td>
        <% end %>

        <% if current_user.id == post.user_id %>
          <td><%= link_to "Edit", edit_post_path(post) %></td>
          <td><%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>