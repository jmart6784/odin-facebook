<% if @post.errors.any? %>
  <div>
    <%= flash[:danger] %>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><span><%= msg %></span></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %><br>

  <%= f.submit "Post" %>
<% end %>