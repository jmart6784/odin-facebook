<% if @post.errors.any? %>
  <div>
    <p><%= flash[:danger] %></p>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><span><%= msg %></span></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %><br>

  <% if @post.image.attached? %>
    <%= image_tag @post.image.variant(resize: '300x300!') %><br>
  <% end %>

  <%= f.label :image, "(Optional) Image formats: .jpg .jpeg .png" %><br>
  <%= f.file_field :image, class: "choose-pic" %><br><br>

  <%= f.submit "Post" %>
<% end %>