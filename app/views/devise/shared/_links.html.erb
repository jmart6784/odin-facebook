<div id="log-in-options">

  <%- if controller_name != 'sessions' %>
    <%= link_to "Sign in", new_session_path(resource_name), id: "login-in-link" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), id: "s-u-link" %>
  <% end %>

  <%# commented out facebook omniauth %>

  <% if false %>
  <h3>OR</h3>
  
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>

        <%= link_to omniauth_authorize_path(resource_name, provider) do %>
          <div id="f-login">
            <img src="/images/fbook.png" width="45" height="45", id="f-logo">
            <h3 id="f-text"><%= "Sign in with #{OmniAuth::Utils.camelize(provider)}" %></h3>
          </div>
        <% end %>

      <% end %>
    <% end %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), id: "forgot" %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), id: "recon-link" %>
  <% end %>

</div>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>