<h1>User Show</h1>

<h3><%= @user.first_name + " " + @user.last_name %></h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th># of Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", users_path %>