<h1>User Show</h1>

<%= user_avatar(@user, size=100) %>

<h3><%= @user.first_name + " " + @user.last_name %></h3>

<% if friendship = current_user.friendships.find_by(friend_id: @user.id)%>
  <% if friendship.pending? %>
    <h3>Request: Pending</h3>
  <% else %>
    <h3>Friend</h3>
    <%= link_to "(Unfriend)", friendship_path(id: @user.id), method: :delete %>
  <% end %>
<% elsif friendship = @user.friendships.find_by(friend_id: current_user)%>
  <%= link_to "Accept Friend Request", friendship_path(id: @user.id), method: :patch %>
  <%= link_to "Decline Friend Request", friendship_path(id: @user.id), method: :delete %>
<% else %>
  <%= link_to 'Friend Request', friendships_path(friend_id: @user.id), method: :post %>
<% end %>

<h3>Joined: <%= time_ago_in_words(@user.created_at) %> ago</h3>

<% if @user.bio %>
  <p><strong>BIO:</strong> <%= @user.bio %></p>
  <%= link_to "Edit Bio", edit_user_registration_path if current_user == @user %>
<% else %>
  <h3>(No Bio)</h3>
<% end %>

<% if @user.posts.exists? %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Content</th>
        <th># of Comments</th>
        <th>Likes</th>
        <th>Like button</th>
        <th>Posted at</th>
        <th>Edited at</th>
        <th>Image(optional)</th>
      </tr>
    </thead>
    <tbody>
      <% @users_posts.each do |post| %>
        <tr>
          <td><%= @user.first_name + " " + @user.last_name %></td>
          <td><%= link_to post.title, post %></td>

          <% unless post.body.blank? %>
            <td><%= post.body %></td>
          <% else %>
            <td>NO OPTIONAL CONTENT</td>
          <% end %>
          
          <td><%= post.comments.count %></td>
          <td id=<%= "user_show_like_count#{post.id}" %>><%= post.likes.count %></td>
          <td>
            <% @index_like_exists = Like.where(post_id: post.id, user_id: current_user.id) == [] ? "Like" : "Unlike" %>

            <%= link_to @index_like_exists, user_show_likes_update_like_path(id: params[:id], post_id: post.id), method: :put, remote: true, id: "user_index_#{post.id}" %>
            
          </td>

        <% if post.created_at == post.updated_at %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>No edit</td>
        <% else %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>Edited <%= time_ago_in_words(post.updated_at, include_seconds: true)%> ago</td>
        <% end %>

        <% if post.image.attached? %>
          <td><%= image_tag post.image.variant(resize: '300x300!') %></td>
        <% else %>
          <td>No image</td>
        <% end %>

        <% if current_user.id == post.user_id %>
          <td><%= link_to "Edit", edit_post_path(post) %></td>
          <td><%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @users_posts, inner_window: 1, outer_window: 0 %>
<% elsif current_user.id == @user.id && @user.posts.count == 0 %>
  <p>You haven't posted anything</p>
  <p>Add a post <%= link_to "here", new_post_path %>.</p>
<% else %>
  <p><%= @user.first_name + " " + @user.last_name + " hasn't posted yet." %></p>
<% end %>

<% if current_user.id == @user.id && @user.posts.count > 1 %>
  <%= link_to "New Post", new_post_path %>
<% end %>
<br>
<%= link_to "Back", :back %>