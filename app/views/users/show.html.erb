<h1>User Show</h1>

<h3><%= @user.first_name + " " + @user.last_name %></h3>

<% if @user.friends.find_by(id: current_user) %>
  <% friendship = Friendship.where(user_id:@user).find_by(friend_id:current_user)  %>
  <% if friendship.pending? %>
    <div>
      <%= link_to "Accept Friend Request", friendship_path, method: :patch %>
      <%= link_to "Decline Friend Request", friendship_path, method: :delete %>
    </div>
  <% else %>
    <div>
      <%= link_to "Unfriend", friendship_path, method: :delete %>
    </div>
  <% end %>
<% elsif @user != current_user %>
  <div>
    <%= link_to 'Send Friend Request', friendships_path(friend_id:@user), method: :post %>
  </div>
<% end %>

<h3>Joined: <%= time_ago_in_words(@user.created_at) %> ago</h3>

<% if @user.posts.exists? %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Content</th>
        <th># of Comments</th>
        <th>Likes</th>
        <th>Like button</th>
        <th>Posted at</th>
        <th>Edited at</th>
      </tr>
    </thead>
    <tbody>
      <% @user.posts.order("created_at DESC").each do |post| %>
        <tr>
          <td><%= @user.first_name + " " + @user.last_name %></td>
          <td><%= link_to post.title, post %></td>
          <td><%= post.body %></td>
          <td><%= post.comments.count %></td>
          <td id=<%= "user_show_like_count#{post.id}" %>><%= post.likes.count %></td>
          <td>
            <% @index_like_exists = Like.where(post_id: post.id, user_id: current_user.id) == [] ? "Like" : "Unlike" %>

            <%= link_to @index_like_exists, user_show_likes_update_like_path(id: params[:id], post_id: post.id), method: :put, remote: true, id: "user_index_#{post.id}" %>
            
          </td>

        <% if post.created_at == post.updated_at %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>No edit</td>
        <% else %>
          <td><%= time_ago_in_words(post.created_at, include_seconds: true)%> ago</td>
          <td>Edited <%= time_ago_in_words(post.updated_at, include_seconds: true)%> ago</td>
        <% end %>

          <% if current_user.id == post.user_id %>
            <td><%= link_to "Edit", edit_post_path(post) %></td>
            <td><%= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% elsif current_user.id == @user.id %>
  <p>You haven't posted anything</p>
  <p>Add a post <%= link_to "here", new_post_path %>.</p>
<% else %>
  <p><%= @user.first_name + " " + @user.last_name + " hasn't posted yet." %></p>
<% end %>

<% if current_user.id == @user.id %>
  <%= link_to "New Post", new_post_path %>
<% end %>
<br>
<%= link_to "Back", :back %>